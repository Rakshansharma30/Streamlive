{
  "dashboard": {
    "id": null,
    "title": "VM Migration Predictor Dashboard",
    "tags": ["vm", "migration", "prediction"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System CPU Usage",
        "type": "gauge",
        "targets": [{
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "gauge",
        "targets": [{
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "refId": "A"
        }]
      },
      {
        "id": 3,
        "title": "Disk I/O",
        "type": "graph",
        "targets": [{
          "expr": "rate(node_disk_io_time_seconds_total[5m])",
          "refId": "A"
        }]
      },
      {
        "id": 4,
        "title": "Migration Predictions",
        "type": "graph",
        "targets": [{
          "expr": "vm_migration_predictions_total",
          "refId": "A"
        }]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
